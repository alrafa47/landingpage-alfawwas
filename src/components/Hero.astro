    </div>
  </div>
</section>

<style>
  .hero {
    padding: 3rem 1.5rem 5rem;
  }
  
  @media (min-width: 1024px) {
    .hero {
      padding: 5rem 10rem;
    }
  }
  
  .hero-inner {
    max-width: 1280px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    align-items: center;
  }
  
  @media (min-width: 1024px) {
    .hero-inner {
      flex-direction: row;
    }
  }
  
  .hero-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    flex: 1;
  }
  
  @media (min-width: 1024px) {
    .hero-content {
      gap: 2rem;
    }
  }
  
  .hero-title {
    font-size: 2.25rem;
    font-weight: 900;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--color-primary);
  }
  
  @media (min-width: 1024px) {
    .hero-title {
      font-size: 3.5rem;
    }
  }
  
  .hero-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 500px;
    line-height: 1.7;
  }
  
  .hero-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .hero-trust {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #e5e5e5;
  }
  
  .avatar-stack {
    display: flex;
    margin-left: 0.75rem;
  }
  
  .avatar {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 9999px;
    border: 2px solid white;
    margin-left: -0.75rem;
    overflow: hidden;
    background: #e5e5e5;
  }
  
  .avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .avatar-count {
    background: var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .avatar-count span {
    color: white;
    font-size: 0.625rem;
    font-weight: 700;
  }
  
  .trust-text {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }
  
  .trust-text strong {
    color: var(--color-primary);
  }
  
  .hero-image-wrapper {
    position: relative;
    width: 100%;
    flex: 1;
  }
  
  .orb-1 {
    width: 6rem;
    height: 6rem;
    top: -1.5rem;
    left: -1.5rem;
  }
  
  .orb-2 {
    width: 10rem;
    height: 10rem;
    bottom: -2.5rem;
    right: -2.5rem;
  }
  
  .hero-image {
    position: relative;
    z-index: 10;
    aspect-ratio: 1;
    border-radius: 1.5rem;
    overflow: hidden;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }
  
  @media (min-width: 1024px) {
    .hero-image {
      aspect-ratio: 4/3;
    }
  }
  
  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
