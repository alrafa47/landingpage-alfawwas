---
import site from '../data/site.json';
import heroData from '../data/hero.json';
---

<section id="beranda" class="hero">
  <div class="hero-slider">
    {heroData.slides.map((slide, index) => (
      <div class={`hero-slide ${index === 0 ? 'active' : ''}`} data-slide={index}>
        <img src={slide.image} alt={slide.title} class="hero-bg-image" />
        <div class="hero-overlay"></div>
        <div class="hero-content">
          <h1 class="hero-title">{slide.title}</h1>
          <p class="hero-description">{slide.description}</p>
          
          <div class="hero-buttons">
            <a href="#paket" class="btn-outline">Lihat Paket</a>
            <a href={`https://wa.me/${site.whatsapp}`} class="btn-outline" target="_blank" rel="noopener">
              Konsultasi Gratis
            </a>
          </div>
          
          <div class="hero-trust">
            <div class="avatar-stack">
              <div class="avatar">
                <img src="https://lh3.googleusercontent.com/aida-public/AB6AXuAJBQUqjQLp4I65psR-IEB4_gN8VkOoiOnPXCY76A_4ESRiNUkjR88dsGEhFn2mKKRiRLpDWzF7-FPzwB3crLckxJTx5GcjgMuCEpd5YaQhYdYm4mLm1RORMs9IpsDdP7elqUmicyfjEpvNw2oyxO3nFejpatOniLr2ybYyQp1Xgh3VmTn6zJOq7k3JpUl4QTkuopJhhOL3TtB-D6Uaf6SRuoGfr_fCF_PtrL4QCidboiRSBRwOeaCv-0ASbE4RdoZHw1MLziqi" alt="Client" />
              </div>
              <div class="avatar">
                <img src="https://lh3.googleusercontent.com/aida-public/AB6AXuBhsRBRQ0rbXqcx3s1X2Y3DvX2vrOaqEnF85aYjk-d2Ae33ElRI6lG45-I4-XO7qbDjBQx0aCT-UdVWYeVZn0DHDZSVmbbochmBFEyC3nzEDw0MZOTjptM6_7d0lkukWjDsD6z6Vo-0fCWy-tOrHWT5VCJao0UXNTFxFUmdgOAd27nCZpnAJh69lTPbJfSMA1JVfoXfmffSQHtDWOcR4W0xXeYn5KfN3HB6jilrFAUgsJ8cwO7PHKdqlD3b6MAgzPuU_hgtKTzJ" alt="Client" />
              </div>
              <div class="avatar avatar-count">
                <span>{site.trustedBy}</span>
              </div>
            </div>
            <p class="trust-text">
              Telah dipercaya oleh <strong>{site.trustedBy} Keluarga</strong>
            </p>
          </div>
        </div>
      </div>
    ))}
  </div>
  
  <!-- Slider Navigation Dots -->
  <div class="slider-dots">
    {heroData.slides.map((_, index) => (
      <button class={`slider-dot ${index === 0 ? 'active' : ''}`} data-dot={index} aria-label={`Slide ${index + 1}`}></button>
    ))}
  </div>
  
  <!-- Slider Arrows -->
  <button class="slider-arrow slider-prev" aria-label="Previous slide">
    <span class="material-symbols-outlined">chevron_left</span>
  </button>
  <button class="slider-arrow slider-next" aria-label="Next slide">
    <span class="material-symbols-outlined">chevron_right</span>
  </button>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const slides = document.querySelectorAll('.hero-slide');
    const dots = document.querySelectorAll('.slider-dot');
    const prevBtn = document.querySelector('.slider-prev');
    const nextBtn = document.querySelector('.slider-next');
    let currentSlide = 0;
    let autoSlideInterval: ReturnType<typeof setInterval>;
    
    function showSlide(index: number) {
      slides.forEach((slide, i) => {
        slide.classList.toggle('active', i === index);
      });
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === index);
      });
      currentSlide = index;
    }
    
    function nextSlide() {
      const next = (currentSlide + 1) % slides.length;
      showSlide(next);
    }
    
    function prevSlide() {
      const prev = (currentSlide - 1 + slides.length) % slides.length;
      showSlide(prev);
    }
    
    function startAutoSlide() {
      autoSlideInterval = setInterval(nextSlide, 5000);
    }
    
    function resetAutoSlide() {
      clearInterval(autoSlideInterval);
      startAutoSlide();
    }
    
    prevBtn?.addEventListener('click', () => {
      prevSlide();
      resetAutoSlide();
    });
    
    nextBtn?.addEventListener('click', () => {
      nextSlide();
      resetAutoSlide();
    });
    
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        showSlide(index);
        resetAutoSlide();
      });
    });
    
    startAutoSlide();
  });
</script>

<style is:global>
  .hero {
    position: relative;
    height: 100vh;
    min-height: 600px;
    max-height: 900px;
    overflow: hidden;
  }
  
  .hero-slider {
    position: relative;
    width: 100%;
    height: 100%;
  }
  
  .hero-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.8s ease-in-out;
    pointer-events: none;
  }
  
  .hero-slide.active {
    opacity: 1;
    pointer-events: all;
  }
  
  .hero-bg-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to right,
      rgba(0, 0, 0, 0.75) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      rgba(0, 0, 0, 0.25) 100%
    );
  }
  
  .hero-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 5rem 1.5rem;
    max-width: 700px;
    z-index: 10;
  }
  
  @media (min-width: 1024px) {
    .hero-content {
      padding: 5rem 10rem;
    }
  }
  
  .hero-title {
    font-size: 2.25rem;
    font-weight: 900;
    line-height: 1.15;
    letter-spacing: -0.02em;
    color: white;
    margin-bottom: 1.25rem;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
  }
  
  @media (min-width: 1024px) {
    .hero-title {
      font-size: 3rem;
    }
  }
  
  .hero-description {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.9);
    max-width: 480px;
    line-height: 1.7;
    margin-bottom: 1.75rem;
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
  }
  
  @media (min-width: 1024px) {
    .hero-description {
      font-size: 1.05rem;
    }
  }
  
  .hero-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.875rem;
    margin-bottom: 1.75rem;
  }
  
  .btn-outline {
    padding: 0.75rem 1.5rem;
    border: 2px solid rgba(255, 255, 255, 0.7);
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
    border-radius: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
    text-decoration: none;
    backdrop-filter: blur(4px);
  }
  
  .btn-outline:hover {
    background: white;
    color: var(--color-primary);
    border-color: white;
  }
  
  .hero-trust {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding-top: 1.25rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .avatar-stack {
    display: flex;
    margin-left: 0.75rem;
  }
  
  .hero .avatar {
    width: 2.25rem;
    height: 2.25rem;
    border-radius: 9999px;
    border: 2px solid rgba(255, 255, 255, 0.8);
    margin-left: -0.75rem;
    overflow: hidden;
    background: #e5e5e5;
  }
  
  .hero .avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .hero .avatar-count {
    background: var(--color-gold);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .hero .avatar-count span {
    color: white;
    font-size: 0.6rem;
    font-weight: 700;
  }
  
  .trust-text {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .trust-text strong {
    color: white;
  }
  
  /* Slider Navigation Dots */
  .slider-dots {
    position: absolute;
    bottom: 1.5rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 0.625rem;
    z-index: 20;
  }
  
  .slider-dot {
    width: 0.625rem;
    height: 0.625rem;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.4);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }
  
  .slider-dot.active {
    background: white;
    transform: scale(1.25);
  }
  
  .slider-dot:hover {
    background: rgba(255, 255, 255, 0.7);
  }
  
  /* Slider Arrows */
  .slider-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 20;
    width: 2.75rem;
    height: 2.75rem;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.15);
    border: none;
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    backdrop-filter: blur(4px);
  }
  
  .slider-arrow:hover {
    background: rgba(255, 255, 255, 0.3);
  }
  
  .slider-prev {
    left: 0.75rem;
  }
  
  .slider-next {
    right: 0.75rem;
  }
  
  @media (min-width: 1024px) {
    .slider-prev {
      left: 1.5rem;
    }
    
    .slider-next {
      right: 1.5rem;
    }
  }
  
  .slider-arrow .material-symbols-outlined {
    font-size: 1.5rem;
  }
</style>
