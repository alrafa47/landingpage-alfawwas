---
import nasiKotakData from '../data/nasiKotak.json';
---

<section class="nasi-kotak">
  <div class="nasi-kotak-inner">
    <div class="section-header">
      <h2 class="section-title">{nasiKotakData.sectionTitle}</h2>
      <p class="section-subtitle">{nasiKotakData.sectionSubtitle}</p>
      <div class="section-divider">
        <span class="dot"></span>
        <span class="line"></span>
        <span class="dot"></span>
      </div>
    </div>
    
    <div class="nasi-kotak-grid">
      {nasiKotakData.packages.map((pkg) => (
        <div class={`nasi-card ${pkg.isPopular ? 'nasi-card-popular' : ''}`}>
          <div class="nasi-card-content">
            <div class="nasi-image">
              <img src={pkg.image} alt={pkg.name} />
            </div>
            <h3 class="nasi-title">{pkg.name}</h3>
            <div class="nasi-options">
              {pkg.options.map((option, index) => (
                <>
                  <p class="nasi-items">
                    {option.items.map((item, i) => (
                      <span>{i + 1}. {item} </span>
                    ))}
                  </p>
                  {index < pkg.options.length - 1 && (
                    <p class="nasi-or">ATAU</p>
                  )}
                </>
              ))}
            </div>
          </div>
          <div class="nasi-price-badge">
            <span>{pkg.price}</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .nasi-kotak {
    padding: 6rem 1.5rem;
    background: var(--color-primary);
    color: white;
  }
  
  @media (min-width: 1024px) {
    .nasi-kotak {
      padding: 6rem 10rem;
    }
  }
  
  .nasi-kotak-inner {
    max-width: 1280px;
    margin: 0 auto;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .section-title {
    font-family: 'Playfair Display', serif;
    font-size: 2.25rem;
    color: white;
    margin-bottom: 0.5rem;
  }
  
  @media (min-width: 1024px) {
    .section-title {
      font-size: 3rem;
    }
  }
  
  .section-subtitle {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
  }
  
  .section-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
    margin-top: 1rem;
  }
  
  .section-divider .dot {
    width: 4px;
    height: 4px;
    background: var(--color-gold);
    border-radius: 50%;
  }
  
  .section-divider .line {
    width: 3rem;
    height: 4px;
    background: var(--color-gold);
    border-radius: 2px;
  }
  
  .nasi-kotak-grid {
    display: grid;
    gap: 2rem;
    max-width: 1100px;
    margin: 0 auto;
  }
  
  @media (min-width: 768px) {
    .nasi-kotak-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  .nasi-card {
    display: flex;
    flex-direction: column;
    background: white;
    color: var(--color-text);
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
    transition: transform 0.3s ease;
  }
  
  .nasi-card:hover {
    transform: translateY(-5px);
  }
  
  .nasi-card-popular {
    border: 4px solid var(--color-gold);
  }
  
  .nasi-card-content {
    padding: 1.5rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .nasi-image {
    width: 100%;
    aspect-ratio: 1;
    border-radius: 0.75rem;
    overflow: hidden;
    margin-bottom: 1.5rem;
  }
  
  .nasi-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .nasi-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }
  
  .nasi-options {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .nasi-items {
    font-size: 0.6875rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
  
  .nasi-or {
    font-size: 0.75rem;
    font-weight: 700;
    font-style: italic;
    color: var(--color-primary);
    margin: 0.25rem 0;
  }
  
  .nasi-price-badge {
    background: var(--color-gold);
    padding: 1rem;
    text-align: center;
  }
  
  .nasi-price-badge span {
    font-weight: 700;
    font-size: 1rem;
    color: white;
  }
</style>
