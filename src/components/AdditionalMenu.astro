---
import menuData from '../data/menu.json';
import site from '../data/site.json';
---

<section id="menu" class="additional-menu">
  <div class="menu-inner">
    <div class="section-header">
      <h2 class="menu-title">{menuData.sectionTitle}</h2>
      <p class="menu-subtitle">{menuData.sectionSubtitle}</p>
      <div class="section-divider">
        <span class="dot"></span>
        <span class="line"></span>
        <span class="dot"></span>
      </div>
    </div>
    
    <div class="menu-grid">
      {menuData.categories.map((category) => (
        <div class="menu-column">
          {category.items.map((item) => (
            <div class="menu-item">
              <span class="menu-item-name">{item.name}</span>
              <div class="menu-item-dots"></div>
              <span class="menu-item-price">{item.price}</span>
            </div>
          ))}
        </div>
      ))}
    </div>
    
    <div class="menu-cta">
      <a 
        href={`https://wa.me/${site.whatsapp}?text=Halo, saya ingin bertanya tentang menu tambahan`}
        class="btn btn-primary"
        target="_blank"
        rel="noopener"
      >
        Hubungi Kami Lebih Lanjut
      </a>
    </div>
  </div>
</section>

<style>
  .additional-menu {
    padding: 6rem 1.5rem;
    background: white;
  }
  
  @media (min-width: 1024px) {
    .additional-menu {
      padding: 6rem 10rem;
    }
  }
  
  .menu-inner {
    max-width: 1280px;
    margin: 0 auto;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .menu-title {
    font-family: 'Playfair Display', serif;
    font-size: 2.25rem;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }
  
  @media (min-width: 1024px) {
    .menu-title {
      font-size: 3rem;
    }
  }
  
  .menu-subtitle {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: var(--color-text-secondary);
  }
  
  .menu-grid {
    display: grid;
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }
  
  @media (min-width: 768px) {
    .menu-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 4rem;
    }
  }
  
  .menu-column {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }
  
  .menu-item {
    display: flex;
    align-items: flex-end;
    gap: 0.5rem;
  }
  
  .menu-item-name {
    flex-shrink: 0;
    font-weight: 700;
    color: var(--color-primary);
  }
  
  .menu-item-dots {
    flex-grow: 1;
    border-bottom: 1px dotted #d5d5d5;
    margin-bottom: 0.375rem;
  }
  
  .menu-item-price {
    flex-shrink: 0;
    font-weight: 700;
    color: var(--color-gold);
    width: 6rem;
    text-align: right;
  }
  
  .menu-cta {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
  }
  
  .menu-cta .btn {
    text-transform: uppercase;
    font-size: 0.875rem;
    letter-spacing: 0.1em;
  }
</style>
