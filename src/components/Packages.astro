---
import packagesData from '../data/packages.json';
import site from '../data/site.json';

interface Props {
  showCta?: boolean;
}

const { showCta = true } = Astro.props;
---

<section id="paket" class="packages">
  <div class="packages-inner">
    <div class="section-header">
      <h2 class="section-title text-primary">{packagesData.sectionTitle}</h2>
      <p class="section-description">{packagesData.sectionDescription}</p>
    </div>
    
    <div class="packages-grid">
      {packagesData.packages.map((pkg) => (
        <div class={`package-card ${pkg.isPopular ? 'package-card-popular' : ''}`}>
          {pkg.isPopular && (
            <div class="popular-badge">{pkg.popularLabel}</div>
          )}
          
          <div class="package-header">
            <h3 class={`package-tier ${pkg.isPopular ? 'tier-popular' : 'tier-default'}`}>
              {pkg.name}
            </h3>
            <div class="package-price">
              <span class="price-value">{pkg.price}</span>
              <span class="price-unit">{pkg.priceUnit}</span>
            </div>
          </div>
          
          <div class="package-features">
            {pkg.features.map((feature) => (
              <div class="package-feature">
                <span class="material-symbols-outlined check-icon">check_circle</span>
                <span>{feature}</span>
              </div>
            ))}
          </div>
          
          <a 
            href={`https://wa.me/${site.whatsapp}?text=Halo, saya ingin memesan ${pkg.name} Aqiqah (${pkg.price})`}
            class={`package-btn ${pkg.isPopular ? 'package-btn-primary' : 'package-btn-secondary'}`}
            target="_blank"
            rel="noopener"
          >
            {pkg.buttonText}
          </a>
        </div>
      ))}
    </div>
    
    <!-- Notes -->
    {packagesData.notes && (
      <div class="packages-notes">
        {packagesData.notes.map((note) => (
          <p class="note-item">{note}</p>
        ))}
      </div>
    )}
    
    <!-- CTA Button -->
    {showCta && (
      <div class="packages-cta">
        <a href="/paket" class="btn btn-secondary">
          Lihat Semua Paket
          <span class="material-symbols-outlined">arrow_forward</span>
        </a>
      </div>
    )}
  </div>
</section>

<style>
  .packages {
    padding: 5rem 1.5rem;
    background: var(--color-section-alt);
  }
  
  @media (min-width: 1024px) {
    .packages {
      padding: 5rem 10rem;
    }
  }
  
  .packages-inner {
    max-width: 1280px;
    margin: 0 auto;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 3.5rem;
  }
  
  .section-title {
    font-size: 1.875rem;
    margin-bottom: 1rem;
  }
  
  @media (min-width: 1024px) {
    .section-title {
      font-size: 2.25rem;
    }
  }
  
  .section-description {
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .packages-grid {
    display: grid;
    gap: 2rem;
    align-items: start;
  }
  
  @media (min-width: 768px) {
    .packages-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .packages-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  
  .package-card {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 2rem;
    border-radius: 1.5rem;
    border: 1px solid rgba(45, 70, 54, 0.1);
    background: white;
    transition: all 0.3s ease;
  }
  
  .package-card:hover {
    border-color: rgba(45, 70, 54, 0.3);
  }
  
  .package-card-popular {
    border: 2px solid var(--color-primary);
    box-shadow: 0 25px 50px rgba(45, 70, 54, 0.1);
  }
  
  @media (min-width: 768px) {
    .package-card-popular {
      transform: scale(1.05);
    }
  }
  
  .popular-badge {
    position: absolute;
    top: -1rem;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-primary);
    color: white;
    font-size: 0.625rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    padding: 0.375rem 1.25rem;
    border-radius: 9999px;
    white-space: nowrap;
  }
  
  .package-header {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .package-tier {
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
  
  .tier-default {
    color: var(--color-text-secondary);
  }
  
  .tier-popular {
    color: var(--color-primary);
  }
  
  .package-price {
    display: flex;
    align-items: baseline;
    gap: 0.25rem;
  }
  
  .price-value {
    font-size: 2.25rem;
    font-weight: 900;
    color: var(--color-primary);
    letter-spacing: -0.02em;
  }
  
  .price-unit {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }
  
  .package-features {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .package-feature {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.875rem;
    color: var(--color-text);
  }
  
  .check-icon {
    color: var(--color-primary);
    font-size: 1.25rem;
  }
  
  .package-btn {
    width: 100%;
    text-align: center;
    padding: 1rem;
    border-radius: 0.75rem;
    font-weight: 700;
    transition: all 0.3s ease;
  }
  
  .package-btn-primary {
    background: var(--color-primary);
    color: white;
    box-shadow: 0 10px 25px rgba(45, 70, 54, 0.2);
  }
  
  .package-btn-primary:hover {
    background: var(--color-primary-hover);
  }
  
  .package-btn-secondary {
    background: var(--color-section-alt);
    color: var(--color-primary);
  }
  
  .package-btn-secondary:hover {
    background: var(--color-primary);
    color: white;
  }
  
  .packages-notes {
    text-align: center;
    margin-top: 2.5rem;
  }
  
  .note-item {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    font-style: italic;
    margin: 0.25rem 0;
  }
  
  .packages-cta {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }
  
  .packages-cta .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .packages-cta .material-symbols-outlined {
    font-size: 1.25rem;
    transition: transform 0.2s ease;
  }
  
  .packages-cta .btn:hover .material-symbols-outlined {
    transform: translateX(4px);
  }
</style>
