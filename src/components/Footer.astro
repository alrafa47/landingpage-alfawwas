---
import site from '../data/site.json';
---

<footer class="footer">
  <div class="footer-inner">
    <div class="footer-grid">
      <!-- Brand Column -->
      <div class="footer-brand">
        <div class="footer-logo">
          <img src="/images/alfawwaz-logo.png" alt={site.name} class="footer-logo-img" />
          <span class="footer-logo-text">{site.name}</span>
        </div>
        <p class="footer-description">
          Partner terpercaya keluarga Indonesia untuk menyelenggarakan ibadah Aqiqah yang syar'i, berkah, dan nikmat.
        </p>
        <div class="footer-social">
          <a href={site.socialLinks.facebook} class="footer-social-link" target="_blank" rel="noopener" aria-label="Facebook">
            <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
